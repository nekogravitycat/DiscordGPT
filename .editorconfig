# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# tab indentation
[*.{py, html}]
indent_style = tab

# 2 space indentation
[*.{yml, yaml}]
indent_style = space
indent_size = 2
